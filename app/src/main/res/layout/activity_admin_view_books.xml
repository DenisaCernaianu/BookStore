<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Model.AdminViewBooksActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_home"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="@color/purple"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="left">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="38dp"
                        android:paddingTop="2dp"
                        android:src="@drawable/book_menu" />


                    <TextView
                        android:layout_width="162dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:paddingStart="0dp"
                        android:paddingLeft="0dp"
                        android:paddingTop="5dp"
                        android:paddingRight="0dp"
                        android:text="BOOKVERSE"
                        android:textColor="@color/white"
                        android:textSize="25sp"
                        android:textStyle="bold">

                    </TextView>

                    <Button
                        android:id="@+id/logOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="40dp"
                        android:backgroundTint="@color/purple"
                        android:text="Deconectare"
                        android:textColor="@color/white"
                        android:textSize="12sp" />




                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <EditText
                android:id="@+id/ETSearchAdmin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextbackround"
                android:backgroundTint="@color/grey"
                android:drawableRight="@drawable/search_icon"
                android:gravity="center"
                android:hint="Caută o carte după titlu/autor"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/bgrey"
                android:textSize="20sp"
                >

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pageTitleAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Cărți disponibile în aplicație : "
                android:textColor="@color/bgrey"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>


        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewAdmin"
            android:layout_width="match_parent"
            android:layout_height="648dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">


        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/LLmenu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/purple"
        >


        <Button
            android:id="@+id/btnGoUsers"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/pink"
            android:drawableLeft="@drawable/account_icon"
            android:textColor="@color/black">

        </Button>

        <Button
            android:id="@+id/btnGoBooks"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/pink"
            android:drawableLeft="@drawable/book_admin_menu"
            android:text="Cărți"
            android:textColor="@color/black">

        </Button>


        <Button
            android:id="@+id/btnGoFav"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:backgroundTint="@color/pink"
            android:drawableLeft="@drawable/img_1"
            android:textColor="@color/black">

        </Button>

        <Button
            android:visibility="gone"
            android:id="@+id/btnGoAcc"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:backgroundTint="@color/pink"
            android:drawableLeft="@drawable/account_icon">

        </Button>

    </LinearLayout>

</RelativeLayout>
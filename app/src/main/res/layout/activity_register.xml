<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".RegisterActivity"
    android:background="@drawable/mainbg"



    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple"
        android:alpha="0.6"
        />


    <LinearLayout
        android:id="@+id/LLimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/card_view_register"
        android:gravity="center"
        android:orientation="vertical"

        >


        <ImageView
            android:id="@+id/bookIcon"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@mipmap/book_icon"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BookVerse"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="-14dp"
        android:id="@+id/card_view_register"
        app:cardBackgroundColor="@color/white"
        >




    <LinearLayout
        android:id="@+id/LLlogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bine ai venit !"
            android:layout_marginBottom="20dp"
            android:textColor="@color/purple"
            android:textSize="32sp"
            android:textStyle="bold">

        </TextView>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ETusername"
            android:background="@drawable/edittextbackround"
            android:hint="Nume"
            android:textColorHint="@color/bgrey"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:backgroundTint="@color/grey"
            android:drawableLeft="@drawable/username"
            android:inputType="textPersonName"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ETemail"
            android:background="@drawable/edittextbackround"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/bgrey"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:backgroundTint="@color/grey"
            android:drawableLeft="@drawable/login_email"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ETphone"
            android:background="@drawable/edittextbackround"
            android:hint="Telefon"
            android:inputType="phone|number"
            android:textColorHint="@color/bgrey"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:backgroundTint="@color/grey"
            android:drawableLeft="@drawable/phone"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ETpassword"
            android:inputType="textPassword"
            android:background="@drawable/edittextbackround"
            android:hint="Parolă"
            android:textColorHint="@color/bgrey"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:backgroundTint="@color/grey"
            android:drawableLeft="@drawable/login_key"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/ETconfirmpassword"
            android:inputType="textPassword"
            android:background="@drawable/edittextbackround"
            android:hint="Confirmă Parola"
            android:textColorHint="@color/bgrey"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:backgroundTint="@color/grey"
            android:drawableLeft="@drawable/password"

            />
        <CheckBox
            android:id="@+id/checkBoxViewPasswordRegister"
            android:text="Afișeaza parola"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/bgrey"/>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"
            android:text="Înregistrare"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/TVsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ai deja un cont ?"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Autentifică-te!"
                android:textStyle="bold"
                android:textColor="@color/purple"
                style="@style/Widget.Material3.Button.TextButton.Dialog"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>


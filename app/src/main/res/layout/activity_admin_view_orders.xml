<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Model.AdminViewOrdersActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_home"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/purple"
            app:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="38dp"
                    android:paddingTop="2dp"
                    android:src="@drawable/book_menu" />


                <TextView
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingStart="0dp"
                    android:paddingLeft="0dp"
                    android:paddingTop="5dp"
                    android:paddingRight="0dp"
                    android:text="BOOKVERSE"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold">

                </TextView>

                <ImageButton
                    android:id="@+id/calendarBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="130dp"
                    android:background="@color/purple"
                    android:src="@drawable/img_6" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Vânzări pentru data : "
            android:textColor="@color/bgrey"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/pageTitleAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_marginTop="5dp"
            android:textColor="@color/bgrey"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Numărul de cărți vândute : "
            android:textColor="@color/bgrey"
            android:textSize="18dp">

        </TextView>

        <TextView
            android:id="@+id/NoOfOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/bgrey"
            android:textSize="18dp">

        </TextView>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"

            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Genul preferat : "
            android:textColor="@color/bgrey"
            android:layout_marginLeft="10dp"
            android:textSize="18dp">

        </TextView>

        <TextView
            android:id="@+id/favType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/bgrey"
            android:textSize="18dp">

        </TextView>

            <TextView
                android:id="@+id/noBooksFavType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/bgrey"
                android:textSize="18dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Aflați câte cărți având genul x s-au vândut selectând genul de mai jos: "
                android:textColor="@color/bgrey"
                android:textSize="16dp">

            </TextView>


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="Selectează genul "
            android:textColorHint="@color/bgrey"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            >

            <AutoCompleteTextView
                android:id="@+id/autoCompleteType"
                android:textColor="@color/bgrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNumberBooksType"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Cărțile vândute sunt : "
            android:textStyle="italic"
            android:textColor="@color/bgrey"
            android:textSize="20dp">

        </TextView>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewAdminOrders"
        android:layout_width="match_parent"
        android:layout_height="437dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">


    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>


<LinearLayout
    android:id="@+id/LLmenu"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/purple"
    >


    <Button
        android:id="@+id/btnGoUsers"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/pink"
        android:drawableLeft="@drawable/account_icon"
        android:textColor="@color/black">

    </Button>

    <Button
        android:id="@+id/btnGoBooks"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/pink"
        android:drawableLeft="@drawable/book_admin_menu"
        android:textColor="@color/black">

    </Button>


    <Button
        android:id="@+id/btnGoSales"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:backgroundTint="@color/pink"
        android:drawableLeft="@drawable/img_1"
        android:text="Vânzări"
        android:textColor="@color/black">

    </Button>

    <Button
        android:visibility="gone"
        android:id="@+id/btnGoAcc"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:backgroundTint="@color/pink"
        android:drawableLeft="@drawable/account_icon">

    </Button>

</LinearLayout>

</RelativeLayout>